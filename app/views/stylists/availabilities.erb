<div class="row">
  <h3>Here are the openings on <span class = "user-input"><%= @date %></span> at <span class = "user-input"><%= @salon %></span>:</h3>
  <% @available_stylists.each do |stylist| %>
    <div class="row">
      <div class="col m12 s12">
        <div class="card-panel">
          <div class="row">
            <div class="col m6 s12">
              <h4><%= stylist.name %></h4>
              <div class="img-container">
                <img src="http://thekinkteam.com/wp-content/uploads/2017/01/woman-hair-stylist-1.jpg" />
              </div>
            </div>
            <div class="col m6 s12">
              <h4>Available Appointments: <h4>
                <ul>
                  <% stylist.availabilities(@date)["am"].each do |am_time| %>
                    <a class="waves-effect waves-light btn" href="#modal1"><li><%= "#{am_time}am" %></li></a>
                  <% end %>
                  <% stylist.availabilities(@date)["pm"].each do |pm_time| %>
                    <a class="waves-effect waves-light btn" href="#modal1 "><li><%= "#{pm_time}pm" %></li></a>
                  <% end %>
                </ul>
            </div>
          </div>
        </div>
      </div>
    </div>

  <% end %>

  <!-- Modal Structure -->
  <div id="modal1" class="modal">
    <div class="modal-content">
      <h4>Book Appointment</h4>

        <div class="row">
        <form class="col s12">
          <div class="row">
            <div class="input-field col s6">
              <i class="material-icons prefix">account_circle</i>
              <input id="icon_prefix" type="text" class="validate">
              <label for="icon_prefix">Name</label>
            </div>
            <div class="input-field col s6">
              <i class="material-icons prefix">phone</i>
              <input id="icon_prefix" type="text" class="validate">
              <label for="icon_prefix">Phone:</label>
            </div>
            <div class="input-field col s6">
              <i class="material-icons prefix">email</i>
              <input id="icon_prefix" type="text" class="validate">
              <label for="icon_prefix">Email:</label>
            </div>
          </div>
        </form>
      </div>
    </div>
    <div class="modal-footer">
      <a href="#!" class="modal-action modal-close waves-effect waves-green btn-flat">Submit</a>
    </div>
  </div>


</div>
