<div class="row">
  <div class="col-lg-6 col-md-6 col-sm-12">
    <div class="card-block">
      <div class="card-header">
          <h3><%= @salon.name %></h3>
      </div>
      <p>Phone: <%= @salon.phone %></p>
      <p>Address: <%= @salon.address %></p>
    </div>
  </div>
  <div class="col-lg-4 col-md-4 col-sm-12">
    <div class="card-block">
      <h3>Hours: <%= @salon.hours %></h3>
    </div>
  </div>
  <div class="col-lg-12">
    <div class="card-block">
      <h3>Services: <h3>
        <% @salon.services.each do |service| %>
          <ul>
            <li><%= service.name %></li>
          </ul>
        <% end %>
    </div>
  </div>
</div>
